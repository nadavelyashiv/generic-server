    {
      "name": "üõ°Ô∏è Admin - User Management",
      "item": [
        {
          "name": "Get All Users",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const response = pm.response.json();",
                  "  if (response.data && response.data.users && response.data.users.length > 0) {",
                  "    pm.collectionVariables.set('adminUserId', response.data.users[0].id);",
                  "  }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
